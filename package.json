{
  "name": "iobroker.vis-mapwidgets",
  "version": "0.0.8",
  "description": "mapwidgets",
  "author": {
    "name": "oweitman",
    "email": "oweitman@gmx.de"
  },
  "homepage": "https://github.com/oweitman/ioBroker.vis-mapwidgets",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "mapwidgets",
    "snow",
    "winter",
    "ski"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oweitman/ioBroker.vis-mapwidgets.git"
  },
  "engines": {
    "node": ">=20.18.1"
  },
  "dependencies": {},
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.1.1",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.5.2",
    "typescript": "~5.9.2"
  },
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|eslint.config.mjs|prettier.config.mjs).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "widgets/mapwidgets/dist/**",
    "widgets/*.html",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test": "node node_modules/mocha/bin/mocha --exit",
    "test:package": "node node_modules/mocha/bin/mocha --exit",
    "test:integration": "node node_modules/mocha/bin/mocha --exit",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint . --debug",
    "repochecker": "npx github:oweitman/ioBroker.repochecker https://github.com/oweitman/ioBroker.vis-mapwidgets --local --noinfo",
    "translate": "translate-adapter",
    "translate-widgets": "node ./bin/translate.js --source widgets/mapwidgets/i18n/en.json --format single",
    "translate-widgets-notranslate": "node ./bin/translate.js --source widgets/mapwidgets/i18n/en.json --format single --notranslate",
    "build": "cd widgets/mapwidgets && npm run build && cd ../..",
    "release": "release-script --all",
    "upload": "NPM_PACK=$(npm pack) && iob url \"$(pwd)/$NPM_PACK\" --debug && rm \"$NPM_PACK\""
  },
  "bugs": {
    "url": "https://github.com/oweitman/ioBroker.vis-mapwidgets/issues"
  },
  "readmeFilename": "README.md"
}
